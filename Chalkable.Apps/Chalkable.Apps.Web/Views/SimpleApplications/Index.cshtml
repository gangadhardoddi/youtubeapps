@model IEnumerable<Chalkable.Apps.Entities.Models.SimpleApplication>

@{
    ViewBag.Title = "Simple Applications";
    Layout = "~/Views/Shared/_SimpleApplicationsLayout.cshtml";    
}

<h2>Simple Applications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DefaultSearchOption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultSearchOption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |                    
            @{
                var routeValues = new RouteValueDictionary();

                routeValues["appName"] = item.Name;
                routeValues["mode"] = "edit";
                routeValues["announcementapplicationid"] = "2032";
                routeValues["applicationinstallid"] = "16216";
                routeValues["standardId[0]"] = ",";
                routeValues["ccStandardCode[0]"] = "";
                routeValues["standardName[0]"] = Server.UrlEncode("Has developed directional habits in processing print (L-R)");
                routeValues["code"] = Server.UrlEncode("/LuNwjJQJZB+Ldb30/fs8g==");
                routeValues["apiRoot"] = Server.UrlEncode("https://classroom.dev.chalkable.com");

                var htmlAttributes = new Dictionary<string, object>();
                htmlAttributes["target"] =  "_blank";
              }

            @Html.RouteLink("Test", routeValues, htmlAttributes)
        </td>
    </tr>
}

</table>
